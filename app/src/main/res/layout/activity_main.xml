<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInterestRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Interest %"
        app:layout_constraintEnd_toEndOf="@+id/tvAmountLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvAmountLabel" />

    <TextView
        android:id="@+id/tvPeriodMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Period (months)"
        app:layout_constraintEnd_toEndOf="@+id/tvAmountLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvInterestRateLabel" />

    <TextView
        android:id="@+id/tvDownpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Downpayment"
        app:layout_constraintEnd_toEndOf="@+id/tvAmountLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvPeriodMonths" />

    <TextView
        android:id="@+id/tvMonthlyPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Monthly payment"
        app:layout_constraintEnd_toEndOf="@+id/tvAmountLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvDownpayment" />

    <TextView
        android:id="@+id/tvTotalRePaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Total Re-paid"
        app:layout_constraintEnd_toEndOf="@+id/tvAmountLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvMonthlyPayment" />

    <EditText
        android:id="@+id/edPeriodMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="(Months)"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tvPeriodMonths"
        app:layout_constraintStart_toEndOf="@+id/tvPeriodMonths"
        app:layout_constraintTop_toTopOf="@+id/tvPeriodMonths" />

    <SeekBar
        android:id="@+id/seekbarInterest"
        android:layout_width="172dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvInterestRateLabel"
        app:layout_constraintStart_toEndOf="@+id/tvInterestRateLabel"
        app:layout_constraintTop_toTopOf="@+id/tvInterestRateLabel" />

    <EditText
        android:id="@+id/etDownpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="(Number)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/tvDownpayment"
        app:layout_constraintStart_toEndOf="@+id/tvDownpayment"
        app:layout_constraintTop_toTopOf="@+id/tvDownpayment" />

    <TextView
        android:id="@+id/tvDisplayMonthlyPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMonthlyPayment"
        app:layout_constraintStart_toEndOf="@+id/tvMonthlyPayment"
        app:layout_constraintTop_toTopOf="@+id/tvMonthlyPayment" />

    <TextView
        android:id="@+id/tvDisplayTotalRePaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotalRePaid"
        app:layout_constraintStart_toEndOf="@+id/tvTotalRePaid"
        app:layout_constraintTop_toTopOf="@+id/tvTotalRePaid" />

    <TextView
        android:id="@+id/tvAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Amount"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="89dp" />

    <EditText
        android:id="@+id/etLoanAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Loan Amount"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/tvAmountLabel"
        tools:layout_editor_absoluteY="71dp" />

    <Button
        android:id="@+id/btnCalculateButton"
        android.onClick="calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp" />

    <TextView
        android:id="@+id/tvShowInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/seekbarInterest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekbarInterest"
        app:layout_constraintTop_toTopOf="@+id/seekbarInterest" />

</androidx.constraintlayout.widget.ConstraintLayout>